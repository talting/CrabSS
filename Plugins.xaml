<Window x:Class="CrabSSWPFTest.Plugins"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrabSSWPFTest"
        mc:Ignorable="d"
        Title="插件管理器" Height="450" Width="800">
    <Grid>
        <Button x:Name="add" Content="添加插件" HorizontalAlignment="Left" Height="33" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Click="add_Click"/>
        <Button x:Name="open" Content="打开插件目录" HorizontalAlignment="Left" Height="33" Margin="124,10,0,0" VerticalAlignment="Top" Width="128" Click="open_Click"/>
        <ListBox x:Name="pluginList" HorizontalAlignment="Center" Height="327" Margin="0,90,0,0" VerticalAlignment="Top" Width="780"/>
        <Label Content="插件列表" HorizontalAlignment="Left" Height="38" Margin="10,54,0,0" VerticalAlignment="Top" Width="142" Foreground="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" FontSize="20"/>
        <Image x:Name="refresh" HorizontalAlignment="Left" Height="16" Margin="281,18,0,0" VerticalAlignment="Top" Width="18" Source="/+.png"  MouseDown="refresh_Click"/>

    </Grid>
</Window>
